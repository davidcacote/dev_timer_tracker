{
    "name": "branch-time-tracker",
    "displayName": "Branch Time Tracker",
    "description": "Track your coding time per git branch",
    "version": "0.1.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/branch-time-tracker.git"
    },
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "icon": "media/icon.png",
    "contributes": {
        "commands": [
            {
                "command": "branch-time-tracker.showStats",
                "title": "Show Branch Time Stats"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "branch-time-tracker",
                    "title": "Branch Time",
                    "icon": "media/icon.png"
                }
            ]
        },
        "views": {
            "explorer": [
                {
                    "id": "branch-time-view",
                    "name": "Branch Time"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.18.126",
        "@types/vscode": "^1.60.0",
        "@vscode/vsce": "^3.6.0",
        "tslint": "^6.1.0",
        "typescript": "^4.5.0"
    }
}
